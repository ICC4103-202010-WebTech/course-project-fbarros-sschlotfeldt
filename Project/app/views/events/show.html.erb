<%=stylesheet_link_tag 'custom'%>
<p id="notice"><%= notice %></p>

<head>
  <title>Events</title>
</head>
<body>
<%@event.each do |v| %>

  <div class= "user_photo">
    <%if v.event_pic.attached? %>
      <%= link_to image_tag(v.event_pic, width: "100%", height: "100%"), url_for(v)%>
    <%else %>
      <%=link_to image_tag("thumbnail.svg", width: "100%", height: "100%", background: "#55595c", color: "#eceeef"), url_for(v) %>
    <%end %>
  </div>
  <p>Name: <%=v.title%><br></p>
  <%if v.user.userName == "Null" %>
    <%@event_o.each do |x|%>
      <%if x.id == v.organization_id %>
        <p>Host: <%=x.org_homepage.name%><br></p>
      <%end %>
    <%end %>
  <%else %>
    <p>Host: <%=v.user.userName%><br></p>
  <%end %>
  <p>Venue: <%=@event_v.find(v.venue_id).name%></p>
  <p>Description: <%=v.description%><br></p>
  <button class="btn"><%=link_to 'Comments', comment_path(v.id)%></button>
  <button class="btn"><%=link_to 'Join event', new_event_m_path(v.id)%></button>
<%end %>

</body>


<footer>
  <div>
    <% if $current_user[0].id == @event[0].user_id %>
      <button class="btn"><%= link_to 'Edit', edit_event_path(@event.ids) %></button>
      <button class="btn"><%= link_to 'Back', events_path %></button>
    <%else%>
      <button class="btn"><%= link_to 'Back', events_path %></button>
    <%end%>
  </div>
</footer>
