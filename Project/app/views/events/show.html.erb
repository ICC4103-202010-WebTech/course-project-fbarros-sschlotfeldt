<%=stylesheet_link_tag 'custom'%>
<p id="notice"><%= notice %></p>

<head>
  <title>Events</title>
</head>
<body>
<%@event.each do |v| %>
  <p>Name: <%=v.title%><br></p>
  <%if(v.user.userName == "Null") %>
    <%@event_o.each do |x|%>
      <%if(x.id == v.organization_id) %>
        <p>Host: <%=x.name%><br></p>
      <%end %>
    <%end %>
  <%else %>
    <p>Host: <%=v.user.userName%><br></p>
  <%end %>
  <p>Description: <%=v.description%><br></p>
  <p><%=link_to 'Comments', comment_path(v.id)%><br></p>
<%end %>
  </body>


<footer>

<div>
  <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'Back', events_path %>
</div>
</footer>
