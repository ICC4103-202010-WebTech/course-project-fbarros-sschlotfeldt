      <div align="right">
        <<div align="right" >
        <button class="btn btn-light"><%=link_to 'Invite Users', invite%></button>
      </div>
    </div>
</body>


<footer>
  <div class="row-3">
    <div align="right">
      <% if $current_user[0].id == @event[0].user_id %>
        <button class="btn"><%= link_to 'Edit', edit_event_path(@event.ids) %></button>
        <button class="btn"><%= link_to 'Back', events_path %></button>
      <%else%>
        <button class="btn"><%= link_to 'Back', events_path %></button>
      <%end%>
    </div>
  </div>
