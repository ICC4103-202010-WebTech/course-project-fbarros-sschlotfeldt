<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <li><h5><%=link_to event.title, event_path(event.id)%></h5></li>
        <li><%= [event.title, event.description] %></li>
        <li><h5><%=link_to "Event Comments", comment_path(event.comments.ids) %></h5></li>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
