<%= form_with model: event, local: true do |form| %>
  <div class="form-group">
    <%= form.label :event_pic %>
    <%= form.file_field :event_pic, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :visibility %>
    <%= form.text_field :visibility %>
  </div>
  <div class="form-group">
    <%= form.label :event_venue %>
    <%= form.collection_select(:event_venue_id, Venue.all.order(name: :asc), :id, :name, {}, { class: "form-control" }) %>
  </div>
  <div class="form-group mt-2">
    <%= form.submit :Update, class: ["btn", "btn-primary"] %>
    <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
  </div>
<%end %>