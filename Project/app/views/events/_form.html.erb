<div class="row ml-0">

<%= form_with model: event, local: true do |form| %>
  <div class="form-group">
    <%= form.label :event_pic %>
    <%= form.file_field :event_pic, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <%=form.fields_for :venues do |v| %>
  <div class="form-group">
    <%= v.label :venue_id %>
    <%= $possible_venue = v.collection_select(:post, Venue.all.order(name: :asc), :id, :name, {}, { class: "form-control" }) %>
  </div>
  <%end %>
  <div class="form-group">
    <%= form.label :Public %>
    <%= form.check_box :visibility %>
  </div>
    <div>
      <%=form.hidden_field :user_id %>
      <%=form.hidden_field :organization_id%>
      <%=form.hidden_field :venue_id%>
    </div>

    <div class="form-group mt-2">
    <% if action_name=="edit" %>
      <%= form.submit :Update, class: ["btn", "btn-primary"] %>
    <%elsif action_name=="new" %>
      <%= form.submit :Create, class: ["btn", "btn-primary"] %>
    <%end %>
    <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
  </div>
  <div>

  </div>
<%end %>
</div>