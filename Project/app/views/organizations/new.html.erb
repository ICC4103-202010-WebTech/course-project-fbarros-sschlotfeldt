<div class="row ml-0">

  <%= form_with model: @organization, local: true do |form| %>
    <div class="form-group">
      <%= form.label "Organization Name:" %>
      <%= form.text_field :o_name, class: "form-control" %>
    </div>

    <div>
      <%=form.hidden_field :user_id %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_field :o_description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :flyer %>
      <%= form.file_field :flyer, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= form.submit :Create, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <%end %>
</div>