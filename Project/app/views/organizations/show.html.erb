
<p id="notice"><%= notice %></p>

<body>
<div class = row>
  <div class="col-3 bg-dark"></div>
  <div class="col-6">
    <div class="user_photo">
      <%if @organization.flyer.attached? %>
        <%= link_to image_tag(@organization.flyer, width: "100%", height: "450px"), url_for(@organization)%>
      <%else %>
        <%=link_to image_tag("thumbnail.svg",  width: "100%", height: "450px", background: "#55595c", color: "#eceeef"), url_for(@organization) %>
      <%end %>
    </div>
  </div>
  <div class="col-3 bg-dark"></div>
</div>
<div class="row">
  <div class="col-3 bg-dark"></div>
  <div class="col-3">
    <div class = "user_box">
      <p class = "p_user">
        <strong><%=@organization.o_name%></strong>
      </p>
      <p class = "p_user">
        <strong>Description: </strong><%=@organization.o_description%>
      </p>
      <p class = "p_user">
        <strong>Host:</strong> <%=@organization.user.userName%>
      </p>
    </div>
  </div>
  <div class="col-3">
    <div>

      <%@mem = [] %>
      <h2><%link_to "Organization Members :", organization_m_path(params[:id]), method: :get %> </h2>
      <%@org_members.each do |om|%>
        <%if om.organization_id == @organization.id%>
          <ul>
            <li><%=@organization_users.find(om.user_id).name %></li>
            <%@mem << om.user_id %>
          </ul>
        <%end%>
      <%end%>
      <%if @mem.include? current_user.id%>
      <%else%>
        <%= button_to 'Join Organization', join_organization_path, method: :get %>
      <%end%>

      <h2>Public Events: </h2>
      <%for oe in @o_events %>
        <%if oe.visibility == true %>
          <ul>
            <li><%=oe.e_name %></li>
          </ul>
        <%end %>
      <%end %>

      <%if @mem.include? current_user.id%>
        <h2>Private Events: </h2>
        <%for oe in @o_events %>
          <%if oe.visibility == false %>
            <ul>
              <li><%=oe.e_name %></li>
            </ul>
          <%end %>
        <%end %>
      <%end%>

      <%if @organization.user_id == current_user.id || current_user.admin == true  %>
        <%=link_to 'Create New Organization Event',org_event_path, class: ["btn", "btn-light"] %>
      <%end%>
    </div>
  </div>
  <div class="col-3 bg-dark"></div>
</div>
</body>

<footer>
  <div class="row">
    <div class="col-9"></div>
    <div class="col-3">
        <div align="left">
          <%= link_to "Back", :back, class:["btn","btn-light"] %>
          <%if @organization.user_id == current_user.id || current_user.admin==true%>
            <button class="btn btn-light"><%= link_to 'Edit', edit_organization_path  %></button>
            <%= button_to 'Delete', @organization, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", remote: false %>
          <%end %>
        </div>
    </div>
  </div>
</footer>
