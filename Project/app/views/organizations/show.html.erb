<%=stylesheet_link_tag 'custom'%>
<p id="notice"><%= notice %></p>

<body>
  <div class = user_container>
    <p class="user_photo">
      <%if @organization.org_homepage.flyer.attached? %>
        <%= link_to image_tag(@organization.org_homepage.flyer, width: "100%"), url_for(@organization)%>
      <%else %>
        <%=link_to image_tag("thumbnail.svg", width: "400px", background: "#55595c", color: "#eceeef"), url_for(@organization) %>
      <%end %>
    </p>
    <div class = "user_box">
      <br><br><br><br>
      <p class = "p_user"><strong><%=@organization.org_homepage.name%></strong><br></p>

      <p class = "p_user"><strong>Description: </strong><%=@organization.org_homepage.description%><br></p>

      <p class = "p_user"><strong>Host:</strong> <%=@organization.user.userName%><br></p>
    </div>
  </div>
</body>

<footer>
  <button class="btn btn-light"><%= link_to 'Back', organizations_path  %></button>
</footer>


