<%=stylesheet_link_tag 'custom'%>
<p id="notice"><%= notice %></p>
<head>
  <title>Organizations</title>
  <h1>Organizations</h1>
</head>

<body>
  <div class="nav justify-content-lg-center">
    <%=form_tag organizations_path, :method => "get" do %>
      <%=text_field_tag :search, params[:search] %>
      <%= submit_tag("Search", :name => nil ) %>
    <%end %>
  </div>
  <div class ="row m-lg-5 col-lg-11 border">
    <table class = "table">
      <thead>
      <tr>
        <th>Organization</th>
        <th>Organization Admin</th>
        <th>Link</th>
      </tr>
      </thead>
      <% @organizations.each do |v| %>
      <tbody>
      <tr>
        <td><%= v.org_homepage.name %></td>
        <td><%= @user.find(v.user.id).userName%></td>
        <td><button><%=link_to 'Go to Organization', organization_path(v.id)%></button></td>
      </tr>
      </tbody>
        <%end%>
    </table>
  </div>
</body>


<footer>
  <button class="btn"><%= link_to 'Back', root_path %></button>
</footer>
