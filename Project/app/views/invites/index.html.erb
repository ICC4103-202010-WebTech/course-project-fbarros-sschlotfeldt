<div class="row">
  <div class="col-3 bg-dark"></div>
  <div class="col-lg-6">
    <table class="col-lg-12 bg-light">

      <thead>
      <tr>
        <th>UserName</th>
        <th>Invite</th>
      </tr>
      </thead>
      <%@mem=[1] %>
      <%@event_members.each do |y|  %>
        <%@mem << y.user_id %>
      <% end %>
      <%@user_for_invite.each do |x|%>
        <tbody>
        <tr>
          <%if @mem.include? x.id %>
          <%else%>
            <td><%=@user_for_invite.find(x.id).userName %></td>
            <%@mem<< x.id %>

            <td><%=form_with model: @invite, local: true do |f| %></td>
                <td><%=f.hidden_field :user_id, :value => x.id %></td>
                <td><%=f.hidden_field :event_id, :value => $cureent_event.id %></td>
                <td><%=f.submit :Invite, class: ["btn", "btn-primary"]%></td>
            <%end%>

        <%end%>
        </tr>
        </tbody>

        <tfoot>
        </tfoot>
      <%end %>
    </table>
  </div>
  <div class="col-3 bg-dark"></div>
</div>
