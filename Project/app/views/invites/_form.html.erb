
<div class="row ml-0">
  <div class ="form-group">
    <%= form_with model: @invite, local: true do |v| %>
      <div class="form-group">
        <%= v.label :event_id %>
        <%= v.collection_select(:event_id, Event.where(user_id: current_user.id).order(e_name: :asc), :id, :e_name, {}, { class: "form-control" })%>
      </div>
      <div class="form-group">
        <%= v.label :users_id %>
        <%= v.collection_select(:user_id, User.all.order(userName: :asc).except(user_id: current_user.id), :id, :userName, {}, { class: "form-control" }) %>
      </div>
      <%= v.submit "Invite", class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class:["btn","btn-light"] %>
  <%end%>
  </div>
</div>
