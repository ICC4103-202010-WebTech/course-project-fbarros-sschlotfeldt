
<div class="row ml-0">
  <div class ="form-group">
    <%= form_with model: @invite, local: true do |v| %>
      <div class="form-group">
        <%= v.label :event_id %>
        <%= v.collection_select(:event_id, Event.where(user_id: $current_user[0].id).order(title: :asc), :id, :title, {}, { class: "form-control" })%>
      </div>
      <div class="form-group">
        <%= v.label :users_id %>
        <%= v.collection_select(:user_id, User.all.order(userName: :asc), :id, :userName, {}, { class: "form-control" }) %>
      </div>
      <%= v.submit "Invite", class: ["btn", "btn-primary"] %>
    <%end%>
  </div>
</div>
