<body>
  <div class="row">
      <div class="col-3">
        <h1>Are you sure you want to join event?</h1>
      </div>
  </div>
  <div class="row">
      <div class="col-3">
        <%= form_for @event_m do |form| %>
          <div>
            <%=form.hidden_field :user_id %>
            <%= form.hidden_field :event_id %>
          </div>
          <div class="form-group mt-2">
            <%= form.submit :Join, class: ["btn", "btn-primary"] %>
          </div>
        <%end %>
      </div>
  </div>
</body>