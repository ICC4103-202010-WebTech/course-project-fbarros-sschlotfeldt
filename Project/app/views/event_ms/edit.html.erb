<div class="row ml-0">
  <header>
    <h1>Are you sure to Exit?</h1>
  </header>
  <body>
    <%= form_for @event_m do |form| %>
      <div class="form-group">
        <%=form.label :Delete %>
        <%= form.hidden_field :_destroy %>
      </div>

      <div class="form-group mt-2">
        <%= form.submit 'Exit', class: ["btn", "btn-primary"] %>
        <%= link_to "Back", :back, class:["btn","btn-light"] %>
      </div>
    <%end%>
  </body>
</div>