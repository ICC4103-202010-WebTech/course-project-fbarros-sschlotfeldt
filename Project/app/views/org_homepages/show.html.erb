<%=stylesheet_link_tag 'custom'%>
<p id="notice"><%= notice %></p>

<body>
  <div class = user_container>
    <div class="user_photo justify-content-between">
      <%if @org_homepage.flyer.attached? %>
        <%= link_to image_tag(@org_homepage.flyer, width: "100%", height: "100%"), url_for(@org_homepage)%>
      <%else %>
        <%=link_to image_tag("thumbnail.svg", width: "400px", background: "#55595c", color: "#eceeef"), url_for(@org_homepage) %>
      <%end %>
    </div>
    <div class = "user_box">
      <br><br><br><br>
      <p class = "p_user"><strong><%=@org_homepage.organization.name%></strong><br></p>

      <p class = "p_user"><strong>Description: </strong><%=@org_homepage.description%><br></p>

      <p class = "p_user"><strong>Host:</strong> <%=@org_homepage.organization.user.userName%><br></p>
    </div>
  </div>
</body>

<footer>
  <button class="btn btn-outline-light"><%= link_to 'Edit', edit_org_homepage_path(params[:id])  %></button>
  <button class="btn btn-outline-light"><%= link_to 'Back', root_path  %></button>
</footer>