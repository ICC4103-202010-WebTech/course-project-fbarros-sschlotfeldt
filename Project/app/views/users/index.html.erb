<p id="notice"><%= notice %></p>
<head>
<h1 class ="text-light">Users</h1>
</head>
<body class="bg-dark">
  <div class="nav justify-content-lg-center">
    <%=form_tag users_path, :method => "get" do %>
      <%=text_field_tag :search, params[:search] %>
      <%= submit_tag("Search", :name => nil ) %>
    <%end %>
  </div>
  <div class ="row m-lg-5 col-lg-11">
    <table class = "table bg-light">
      <thead>
        <tr>
          <th>Name</th>
          <th>username</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
      <% for v in @users %>
        <tr>
          <%if v.userName != "Null" && v.admin==false %>
            <%if v.userName!= current_user.userName%>
              <td><strong><%=v.name%>&nbsp<%=v.lastName%></strong></td>
              <td><strong><%=v.userName%></strong></td>
            <td><button><%= link_to 'Show', user_path((v.id))%></button></td>
            <%end%>
          <%else %>
          <% end %>
        <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</body>


<footer>
  <div class="float-lg-right">
  <button class="btn"><%= link_to 'Back', root_path %></button>
  </div>
</footer>

