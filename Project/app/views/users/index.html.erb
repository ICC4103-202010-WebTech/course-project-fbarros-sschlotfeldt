<p id="notice"><%= notice %></p>
<head>
<h1>Users</h1>
</head>
<body>
  <div class="nav justify-content-lg-center">
    <%=form_tag users_path, :method => "get" do %>
      <%=text_field_tag :search, params[:search] %>
      <%= submit_tag("Search", :name => nil ) %>
    <%end %>
  </div>
  <div class ="row m-lg-5 col-lg-11 border">
    <table class = "table">
      <thead>
        <tr>
          <th>Name</th>
          <th>username</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
      <% for v in @users %>
        <tr>
          <%if v.userName != "Null" %>
              <td><strong><%=v.profilePage.name%>&nbsp<%=v.profilePage.lastName%></strong></td>
              <td><strong><%=v.userName%></strong></td>
            <td><button><%= link_to 'Show', user_path((v.id))%></button></td>

          <%else %>
              <td><strong><%=v.profilePage.name%><%=v.profilePage.lastName%></strong></td>
              <td><strong><%=v.userName%></strong></td>
              <td><button><%= link_to 'Show', user_path((v.id)) %></button></td>
          <% end %>
        <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</body>


<footer>
  <button class="btn"><%= link_to 'Back', root_path %></button>
</footer>

