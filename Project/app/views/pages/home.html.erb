<%=stylesheet_link_tag 'custom'%>
<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<head>
    <meta charset="UTF-8">
    <title>Welcome to Proyect 2!</title>
    <link rel="stylesheet" type = "text/css" href="custom.css">
</head>

<body>
<% @p_events.each do|v| %>
  <div class = "wrapper">
    <div class="ad_wrapper">
      <div class = ad_box_1>
        <p>Ads</p>
      </div>
    </div>
    <div class ="box">
      <h3 class = "eventshome"><%=link_to v.title, event_path(v.id)%></h3>
      <%if v.user.userName == "Null" %>
        <%@p_organizations.each do |w| %>
          <% if v.organization_id == w.id   %>
            <%@real_org_id = w.id - 1%>
            <p>Host : <%=link_to w.org_homepage.name, org_homepage_path(@real_org_id)%></p>
          <%end %>
        <%end %>
      <%else %>
        <p>Host : <%=link_to v.user.userName, profile_page_path(v.id)%></p>
      <%end %>

      <p>Description : <%=[v.description]%></p>

      <br><br>
      <h4 class="com_home">Comments:</h4>
      <% @p_comments.each do |x|  %>
      <% if v.id == x.event_id   %>
        <tr>
          <td><p class="comment"><%= x.user.userName %>: <%= x.text %></p></td>
            </tr>
        <% end %>
      <% end %>

    </div>
    <div class="ad_wrapper">
      <div class = ad_box_1>
        <p>Ads</p>
      </div>
    </div>
  </div>
<% end %>



</body>
</html>