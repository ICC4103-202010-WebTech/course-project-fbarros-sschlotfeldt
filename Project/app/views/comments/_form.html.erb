<div class="row ml-2">

  <%= form_for @comment do |form| %>

    <%if action_name == 'edit' %>
      <div class="form-group">
        <%= form.label :Delete %>
        <%= form.check_box :_destroy, class: "form-control" %>
      </div>
    <%end%>

    <div class="form-group">
      <%= form.label :atta %>
      <%= form.file_field :atta, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :text %>
      <%= form.text_field :text, class: "form-control" %>
    </div>

    <div>
      <%= form.hidden_field :user_id%>
    </div>

    <div class="form-group">
      <%= form.label :event %>
      <%= form.collection_select(:event_id, Event.all.order(title: :asc), :id, :title, {}, { class: "form-control" }) %>
    </div>

    <div class="form-group mt-2">
      <%= form.submit :Submit, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <%end %>
</div>