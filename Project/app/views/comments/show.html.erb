<p id="notice"><%= notice %></p>


<body>
<h1 class="text-light">Comments</h1>
  <div align="left" class = "wrapper">
    <span class ="box">
      <h3 align="left" ><%=@comment.event.e_name %></h3>
          <%for v in @comments do %>
            <%if current_user.id == v.user_id|| current_user.admin==true%>
              <span class ="text-left"> <%=v.user.userName%>: <%=v.text%></span> <span><%=link_to 'Edit', edit_comment_path(v) %></span>&nbsp<span><%= link_to 'Delete', v, method: :delete, data: { confirm: 'Are you sure?' }%></span>
              <br>
              <%if v.atta.attached? %>
                <div><%= link_to image_tag(v.atta, width: "40%", height: "30%"), url_for(v)%></div>
              <%else%>
              <%end%>
            <%else%>
              <p class ="text-left"> <%=v.user.userName%>: <%=v.text%></p>
              <%if v.atta.attached? %>
                <div><%= link_to image_tag(v.atta, width: "100%", height: "100%"), url_for(v)%></div>
                <div><%=v.user.userName%>: <%=v.text%></div>
              <%else%>
              <%end%>
            <%end%>
          <%end %>
    </span>
  </div>
</body>
<footer align="center"><br>
  <%= link_to "Back", :back, class:["btn","btn-light"] %>
  <button class="btn"><%=link_to 'New Comment', new_event_comment_path(@comment.event_id) %></button>
</footer>

