<p id="notice"><%= notice %></p>


<body>
  <h2>Comments</h2>
  <div class = "wrapper">
    <span class ="box">
      <h3 class="text-left"><%=@comment.event.title %></h3>
        <%for v in @comments do %>
          <%if $current_user[0].id == v.user_id%>
            <span class ="text-left"> <%=v.user.userName%>: <%=v.text%></span> <span><%=link_to 'Edit', edit_comment_path(v) %></span>
            <%if v.atta.attached? %>
            <div><%= link_to image_tag(v.atta, width: "40%", height: "30%"), url_for(v)%></div>
            <%else%>
            <%end%>
          <%else%>
            <span class ="text-left"> <%=v.user.userName%>: <%=v.text%></span>
            <%if v.atta.attached? %>
              <%= link_to image_tag(v.atta, width: "100%", height: "100%"), url_for(v)%>
              <div><%=v.user.userName%>: <%=v.text%></div>
            <%else%>
            <%end%>
        <%end%>
      <%end %>
    </span>
  </div>
</body>
<footer>
  <%= link_to 'Back', events_path %><br>
  <%=link_to 'New Comment', new_event_comment_path(params[:id]) %>
</footer>

